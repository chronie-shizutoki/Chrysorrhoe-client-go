<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 夜间模式主题样式 -->
    <style name="Theme.ChrysorrhoeGo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主要品牌颜色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryContainer">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_white</item>
        
        <!-- 次要品牌颜色 -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryContainer">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/color_white</item>
        
        <!-- 背景和表面颜色 - 夜间模式深色 -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorSurfaceVariant">#2C2C2C</item>
        <item name="colorOnSurface">@color/color_white</item>
        <item name="colorOnSurfaceVariant">#CCCCCC</item>
        
        <!-- 错误颜色 -->
        <item name="colorError">@color/color_danger</item>
        <item name="colorErrorContainer">@color/color_danger</item>
        <item name="colorOnError">@color/color_white</item>
        <item name="colorOnErrorContainer">@color/color_white</item>
        
        <!-- 轮廓和阴影 -->
        <item name="colorOutline">#444444</item>
        
        <!-- 状态栏和导航栏 -->
        <item name="android:statusBarColor">#1E1E1E</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">#1E1E1E</item>
        
        <!-- 文本颜色 -->
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textColorSecondary">#CCCCCC</item>
        <item name="android:textColorTertiary">#999999</item>
    </style>
</resources>