<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正常状态 -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <corners android:radius="12dp" />
            <padding
                android:left="24dp"
                android:top="16dp"
                android:right="24dp"
                android:bottom="16dp" />
        </shape>
    </item>
    
    <!-- 禁用状态 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_variant" />
            <corners android:radius="12dp" />
            <padding
                android:left="24dp"
                android:top="16dp"
                android:right="24dp"
                android:bottom="16dp" />
        </shape>
    </item>
    
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_focused" />
            <corners android:radius="12dp" />
            <padding
                android:left="24dp"
                android:top="16dp"
                android:right="24dp"
                android:bottom="16dp" />
        </shape>
    </item>
</selector>