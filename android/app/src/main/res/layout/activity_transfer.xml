<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 装饰性背景图形 -->
            <View
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/card_gradient_circle"
                android:alpha="0.15"
                android:translationX="80dp"
                android:translationY="-80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/card_gradient_circle"
                android:alpha="0.1"
                android:translationX="-100dp"
                android:translationY="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

    <!-- 使用Material3的工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="转账"
        app:titleTextColor="@color/on_primary"
        app:titleCentered="true"
        android:minHeight="?attr/actionBarSize"
        app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        android:fillViewport="true"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="40dp">

            <!-- 余额卡片 - 使用Material3样式和现代化设计 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/balanceCard"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp">
                    
                    <!-- 现代装饰背景元素 -->
                        <View
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:background="@drawable/card_gradient_circle"
                            android:alpha="0.15"
                            android:rotation="45"
                        android:translationX="50dp"
                        android:translationY="-100dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/balanceLabel"
                        style="@style/TextAppearance.ChrysorrhoeGo.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用余额"
                        android:textColor="@color/on_primary_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/balanceValue"
                        style="@style/TextAppearance.ChrysorrhoeGo.HeadlineLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="¥0.00"
                        android:textColor="@color/on_primary_container"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/balanceLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 转账表单卡片 - 现代化设计 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/transferFormCard"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/balanceCard"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- 表单标题与图标 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/title"
                            style="@style/TextAppearance.ChrysorrhoeGo.HeadlineMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转账信息"
                            android:textColor="@color/text_primary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/recipientLabel"
                        style="@style/TextAppearance.ChrysorrhoeGo.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="收款方"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/title" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_recipient"
                        style="@style/Widget.ChrysorrhoeGo.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/transfer_recipient_label"
                        android:theme="@style/ThemeOverlay.ChrysorrhoeGo.TextInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recipientLabel"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_recipient"
                            style="@style/TextAppearance.ChrysorrhoeGo.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/transfer_recipient_hint"
                            android:inputType="text"
                            android:importantForAutofill="no" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/amountLabel"
                        style="@style/TextAppearance.ChrysorrhoeGo.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="转账金额"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_input_recipient" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_amount"
                        style="@style/Widget.ChrysorrhoeGo.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/transfer_amount_label"
                        android:theme="@style/ThemeOverlay.ChrysorrhoeGo.TextInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/amountLabel"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_amount"
                            style="@style/TextAppearance.ChrysorrhoeGo.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/transfer_amount_hint"
                            android:inputType="numberDecimal"
                            android:importantForAutofill="no" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/descriptionLabel"
                        style="@style/TextAppearance.ChrysorrhoeGo.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="备注（可选）"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_input_amount" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_memo"
                        style="@style/Widget.ChrysorrhoeGo.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/transfer_memo_label"
                        android:theme="@style/ThemeOverlay.ChrysorrhoeGo.TextInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/descriptionLabel">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_memo"
                            style="@style/TextAppearance.ChrysorrhoeGo.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/transfer_memo_hint"
                            android:inputType="text"
                            android:importantForAutofill="no" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/errorMessage"
                        style="@style/TextAppearance.ChrysorrhoeGo.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/error"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_input_memo" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_transfer"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/transfer_submit"
                        android:textColor="@color/on_primary"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        app:cornerRadius="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/errorMessage"
                        app:elevation="2dp"
                        app:rippleColor="@color/primary_ripple" />
                    
                    <!-- 加载状态指示器 -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_bar"
                        style="@style/Widget.Material3.CircularProgressIndicator"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        app:indicatorColor="@color/primary"
                        app:indicatorSize="40dp"
                        app:layout_constraintBottom_toBottomOf="@+id/button_transfer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/button_transfer" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 结果卡片 - 现代化设计 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultCard"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:background="@color/surface"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transferFormCard"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- 图标与标题 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/resultIconContainer"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:background="@drawable/result_icon_background"
                        android:gravity="center"
                        android:padding="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/resultIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_input_add"
                            android:tint="@color/primary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/resultTitle"
                        style="@style/TextAppearance.ChrysorrhoeGo.HeadlineSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="转账结果"
                        android:textColor="@color/text_primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/resultIconContainer" />

                    <TextView
                        android:id="@+id/resultMessage"
                        style="@style/TextAppearance.ChrysorrhoeGo.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="转账成功/失败信息"
                        android:textColor="@color/text_secondary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/resultTitle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/backToDashboardButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:text="返回仪表盘"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        app:cornerRadius="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/resultMessage" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 移除重复的ProgressBar，保留表单内的进度指示器 -->
</androidx.constraintlayout.widget.ConstraintLayout>