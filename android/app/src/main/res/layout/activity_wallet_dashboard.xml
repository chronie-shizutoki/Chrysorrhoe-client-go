<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".ui.wallet.WalletDashboardActivity">

    <!-- 页面顶部标题栏 -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_surface"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.chronie.chrysorrhoego.ui.component.CustomText
            android:id="@+id/toolbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textStyle="h3"
            android:text="@string/wallet_dashboard" />

        <com.chronie.chrysorrhoego.ui.component.CustomButton
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:text="@string/logout_button"
            app:buttonType="outline" />
    </LinearLayout>

    <!-- 余额卡片 - 使用自定义卡片组件 -->
    <com.chronie.chrysorrhoego.ui.component.CustomCard
        android:id="@+id/balance_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_l">

            <com.chronie.chrysorrhoego.ui.component.CustomText
                android:id="@+id/balance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_balance"
                app:textStyle="body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.chronie.chrysorrhoego.ui.component.CustomText
                android:id="@+id/balance_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_s"
                app:textStyle="h1"
                android:text="0.00"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/balance_label" />
                
            <!-- 余额状态指示器 -->
            <com.chronie.chrysorrhoego.ui.component.CustomCard
                android:id="@+id/balance_status_card"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/spacing_s"
                android:paddingHorizontal="@dimen/spacing_m"
                android:background="@color/surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/balance_amount">
                
                <com.chronie.chrysorrhoego.ui.component.CustomText
                    android:id="@+id/balance_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:textStyle="caption"
                    app:isBold="true"
                    android:text="@string/balance_status_good" />
            </com.chronie.chrysorrhoego.ui.component.CustomCard>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.chronie.chrysorrhoego.ui.component.CustomCard>

    <!-- 功能入口区域 - 采用网格布局展示核心功能 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_m"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balance_card">
        
        <!-- 转账功能卡片 -->
        <com.chronie.chrysorrhoego.ui.component.CustomCard
            android:id="@+id/transfer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_m">
                
                <com.chronie.chrysorrhoego.ui.component.CustomButton
                    android:id="@+id/transfer_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:text="@string/transfer_button"
                    app:buttonType="primary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.chronie.chrysorrhoego.ui.component.CustomCard>
        
        <!-- 第二行：CDK兑换和交易历史 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <!-- CDK兑换卡片 -->
            <com.chronie.chrysorrhoego.ui.component.CustomCard
                android:id="@+id/cdk_redeem_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_s">
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/spacing_m">
                    
                    <com.chronie.chrysorrhoego.ui.component.CustomButton
                        android:id="@+id/cdk_redeem_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:text="@string/cdk_redeem_button"
                        app:buttonType="secondary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.chronie.chrysorrhoego.ui.component.CustomCard>
            
            <!-- 交易历史卡片 -->
            <com.chronie.chrysorrhoego.ui.component.CustomCard
                android:id="@+id/transaction_history_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_s">
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/spacing_m">
                    
                    <com.chronie.chrysorrhoego.ui.component.CustomButton
                        android:id="@+id/transaction_history_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:text="@string/transaction_history_button"
                        app:buttonType="secondary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.chronie.chrysorrhoego.ui.component.CustomCard>
        </LinearLayout>
    </LinearLayout>
    
    <!-- 最近交易历史预览区域 -->
    <com.chronie.chrysorrhoego.ui.component.CustomCard
        android:id="@+id/recent_transactions_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balance_card">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- 标题行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_m"
                android:gravity="center_vertical">
                
                <com.chronie.chrysorrhoego.ui.component.CustomText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:textStyle="h3"
                    android:text="Recent Transactions" />
                    
                <com.chronie.chrysorrhoego.ui.component.CustomButton
                    android:id="@+id/view_all_transactions_button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="View All"
                    app:buttonType="outline" />
            </LinearLayout>
            
            <!-- 交易记录列表容器 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_border" />
                
            <!-- 占位交易记录项 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_m">
                
                <com.chronie.chrysorrhoego.ui.component.CustomText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textStyle="body"
                    android:text="No recent transactions" />
            </LinearLayout>
        </LinearLayout>
    </com.chronie.chrysorrhoego.ui.component.CustomCard>

    <!-- 加载指示器 -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/color_surface"
        android:indeterminateTint="@color/color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>