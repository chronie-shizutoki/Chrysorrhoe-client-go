<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom attributes for components -->
    <declare-styleable name="BaseComponent">
        <attr name="componentBackgroundColor" format="color" />
        <attr name="componentTextColor" format="color" />
        <attr name="componentCornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="buttonType" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="outline" value="2" />
        </attr>
        <attr name="buttonText" format="string" />
        <attr name="buttonBackgroundColor" format="color" />
        <attr name="buttonTextColor" format="color" />
        <attr name="buttonCornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomInput">
        <attr name="inputLabel" format="string" />
        <attr name="inputHint" format="string" />
        <attr name="inputError" format="string" />
        <attr name="isRequired" format="boolean" />
        <attr name="inputBackgroundColor" format="color" />
        <attr name="inputTextColor" format="color" />
        <attr name="inputBorderColor" format="color" />
        <attr name="inputCornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomCard">
        <attr name="cardTitle" format="string" />
        <attr name="cardBackgroundColor" format="color" />
        <attr name="cardBorderColor" format="color" />
        <attr name="cardCornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomText">
        <attr name="textStyle" format="enum">
            <enum name="h1" value="0" />
            <enum name="h2" value="1" />
            <enum name="h3" value="2" />
            <enum name="body" value="3" />
            <enum name="bodySmall" value="4" />
            <enum name="caption" value="5" />
            <enum name="button" value="6" />
        </attr>
        <attr name="isBold" format="boolean" />
        <attr name="isItalic" format="boolean" />
        <attr name="isUnderline" format="boolean" />
    </declare-styleable>

    <!-- 底部导航栏自定义属性 -->
    <declare-styleable name="BottomNavigationBar">
        <attr name="navigationBackgroundColor" format="color" />
        <attr name="navigationSelectedColor" format="color" />
        <attr name="navigationUnselectedColor" format="color" />
        <attr name="navigationBorderColor" format="color" />
        <attr name="navigationBorderRadius" format="dimension" />
    </declare-styleable>

    <!-- Component styles -->
    
    <!-- 基础自定义组件样式 -->
    <style name="CustomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    
    <style name="CustomCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="CustomInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CustomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CustomButton.Primary">
        <item name="buttonType">primary</item>
        <item name="buttonBackgroundColor">@color/color_primary</item>
        <item name="buttonTextColor">@color/color_white</item>
        <item name="buttonCornerRadius">@dimen/radius_md</item>
    </style>

    <style name="CustomButton.Secondary">
        <item name="buttonType">secondary</item>
        <item name="buttonBackgroundColor">@color/color_secondary</item>
        <item name="buttonTextColor">@color/color_white</item>
        <item name="buttonCornerRadius">@dimen/radius_md</item>
    </style>

    <style name="CustomButton.Outline">
        <item name="buttonType">outline</item>
        <item name="buttonBackgroundColor">@android:color/transparent</item>
        <item name="buttonTextColor">@color/color_primary</item>
        <item name="buttonCornerRadius">@dimen/radius_md</item>
    </style>

    <style name="CustomInput.Default">
        <item name="inputBackgroundColor">@color/color_surface</item>
        <item name="inputTextColor">@color/color_text</item>
        <item name="inputBorderColor">@color/color_border</item>
        <item name="inputCornerRadius">@dimen/radius_md</item>
    </style>

    <style name="CustomCard.Default">
        <item name="cardBackgroundColor">@color/color_surface</item>
        <item name="cardBorderColor">@color/color_border</item>
        <item name="cardCornerRadius">@dimen/radius_lg</item>
    </style>
    
    <!-- Text styles -->
    <style name="CustomText.H1">
        <item name="textStyle">h1</item>
    </style>
    
    <style name="CustomText.H2">
        <item name="textStyle">h2</item>
    </style>
    
    <style name="CustomText.H3">
        <item name="textStyle">h3</item>
    </style>
    
    <style name="CustomText.Body">
        <item name="textStyle">body</item>
    </style>
    
    <style name="CustomText.BodySmall">
        <item name="textStyle">bodySmall</item>
    </style>
    
    <style name="CustomText.Caption">
        <item name="textStyle">caption</item>
    </style>
    
    <style name="CustomText.Button">
        <item name="textStyle">button</item>
    </style>
</resources>