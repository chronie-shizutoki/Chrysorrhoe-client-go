    <color name="on_success_container">#065F46</color>
    <color name="on_warning">#111827</color>
    <color name="on_warning_container">#78350F</color>
    
    <!-- 标准文本颜色 -->
    <color name="text_primary">#111827</color>
    <color name="text_secondary">#4B5563</color>
    <color name="text_hint">#9CA3AF</color>
    <color name="text_disabled">#D1D5DB</color>
    
    <!-- 兼容性颜色 -->
    <color name="colorPrimary">@color/primary</color>
    <color name="colorPrimaryDark">#1E40AF</color>
    <color name="colorAccent">@color/secondary</color>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    
    <!-- 布局相关颜色 -->
    <color name="card_background">@color/surface</color>
    <color name="background_color">@color/background</color>
    
    <!-- 交易相关颜色 -->
    <color name="color_negative">@color/error</color>
    <color name="color_positive">@color/success</color>
    <color name="status_completed_text">@color/success</color>
    <color name="status_pending_text">@color/warning</color>
    <color name="status_failed_text">@color/error</color>
    
    <!-- 阴影和覆盖层 -->
    <color name="shadow">#000000</color>
    <color name="scrim">#000000</color>
    
