<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design 3 现代色彩系统 -->
    
    <!-- 主色调 - 现代蓝色调，传达信任和专业感 -->
    <color name="primary">#2563EB</color>
    <color name="primary_container">#DBEAFE</color>
    <color name="primary_focused">#1D4ED8</color>
    <color name="primary_disabled">#93C5FD</color>
    <color name="primary_inverse">#1E40AF</color>
    <color name="primary_ripple">@android:color/white</color>
    <color name="success_green">#4CAF50</color>
    <color name="error_red">#F44336</color>
    
    <!-- 次要色调 - 使用更现代的紫色调作为强调色 -->
